.page-welfare {
  background: #f8f8f8;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  padding: 10rpx 40rpx;
}

.row {
  margin-top: 45rpx;
  border-radius: 8rpx;
  -webkit-box-shadow: 0 0 5rpx #aaaaaa;
          box-shadow: 0 0 5rpx #aaaaaa;
}

.row > Image {
  display: block;
  width: 100%;
  height: 265rpx;
}

.row > View {
  width: 100%;
  height: 160rpx;
  background-color: white;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  padding-left: 40rpx;
  position: relative;
}

.row > View > View.title {
  font-size: 36rpx;
  font-weight: bold;
  padding-top: 36rpx;
}

.row > View > View.desc {
  font-size: 26rpx;
  padding-top: 20rpx;
  color: #666666;
}

.row > View > View.btn {
  position: absolute;
  top: 48rpx;
  right: 40rpx;
  line-height: 56rpx;
  padding: 0 32rpx;
  border-radius: 28rpx;
  background-color: #e8bd90;
  color: #333333;
  font-size: 26rpx;
  height: 56rpx;
}

.tip {
  padding: 80rpx 0;
  font-size: 28rpx;
}

.tip > View:first-child {
  padding-bottom: 32rpx;
}

.tip > View:last-child {
  font-size: 26rpx;
  color: #333333;
}

